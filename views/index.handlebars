<div class="container">
    <div class="row">
        <div class="col-md-6">
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>{{this.burger_name}} <button class="btn btn-warning devour-btn m-1"
                        data-id="{{this.id}}">Devour</button></li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <ol>
                {{#each burgers}}
                {{#if this.devoured}}
                <li>{{this.burger_name}} <button class="btn btn-warning delete-btn m-1"
                        data-id="{{this.id}}">Remove</button>
                </li>

                {{/if}}
                {{/each}}
            </ol>

        </div>
    </div>
    <form action="/api/burgers" method="POST">
        <div class="form-group">
            <label for="burger_name">Add a new burger!</label>
            <input type="text" class="form-control" name="burger_name" id="burger_name" placeholder="Burger name...">
            <button type="submit" class="btn btn-primary m-1">Add Burger</button>
        </div>
    </form>
</div>
